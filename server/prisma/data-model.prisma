type User {
	id: ID! @id @unique
	fullname: String!
	email: String! @unique
	password: String!
	token: String
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type Food {
	id: ID! @id @unique
	name: String!
	price: Int!
	description: String!
	tags: String
	image: String!
	isApproved : Boolean! @default(value:false)
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type BucketItem {
	id: ID! @id @unique
	qty: Int! @default(value: 1)
	food: Food
	user: User
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type OrderItem {
	id: ID! @id @unique
	name: String!
	price: Float!
	image: String
	qty: Int!
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}

type Order {
	id: ID! @id @unique
	items: [OrderItem!]!
	transactionId: String!
	amount: Float!
	status: String!
	user: User!
	receipt: String!
	createdAt: DateTime! @createdAt
	updatedAt: DateTime! @updatedAt
}
